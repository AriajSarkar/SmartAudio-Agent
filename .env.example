# Google API Key (required for ADK agents)
GOOGLE_API_KEY=your_google_api_key_here

# Gemini Model Configuration (optional - defaults provided)
GEMINI_TEXT_MODEL=gemini-2.0-flash-lite
# GEMINI_PRO_MODEL=gemini-2.0-flash

# LLM Provider Selection (for agents, NOT TTS)
# Options: gemini (default) | ollama (local) | openrouter (cloud)
LLM_PROVIDER=gemini

# Ollama Configuration (local LLM - no API key needed)
# Download models: ollama pull mistral-small3.1
# Start server: ollama serve
OLLAMA_MODEL=mistral-small3.1
OLLAMA_API_BASE=http://localhost:11434
OLLAMA_API_KEY=placeholder  # Not needed for local, reserved for future cloud Ollama

# OpenRouter Configuration (cloud LLM - requires API key)
# Get key from: https://openrouter.ai/keys
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
OPENROUTER_API_KEY=your_openrouter_key_here

# Replicate API Configuration (optional - TTS only, falls back to local TTS)
REPLICATE_API_TOKEN=your_replicate_token_here

# TTS Provider Selection (auto|replicate|local)
TTS_PROVIDER=auto

# Output Configuration
OUTPUT_DIR=./output
SAMPLE_DIR=./samples

# Session & Checkpoint Configuration
SESSION_DB_PATH=./saa_sessions.db
CHECKPOINT_INTERVAL=10
USE_MSGPACK=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_JSON=false
LOG_DIR=./logs

# GPU Configuration
USE_GPU=true
GPU_ID=0

# Audio Configuration
DEFAULT_VOICE_PROFILE=narrator
DEFAULT_LANGUAGE=en
DEFAULT_AUDIO_FORMAT=mp3
AUDIO_QUALITY=high

# TTS Quality Settings
TTS_TEMPERATURE=0.75
TTS_REPETITION_PENALTY=7.0
TTS_SPEED=1.0

# Text Processing
MAX_SEGMENT_LENGTH=250  # Prevents TTS truncation warnings (actual XTTS-v2 limit)
CHUNK_SIZE=500
SAMPLE_PARAGRAPHS=3

# Reference Audio (for voice cloning)
REFERENCE_AUDIO_DIR=./reference_audio
DEFAULT_MALE_VOICE=male.wav
DEFAULT_FEMALE_VOICE=female.wav

# Session Management (for multi-turn conversations)
SESSION_DB_PATH=./sessions.db
